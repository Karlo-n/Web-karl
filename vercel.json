{
  "version": 2,
  "public": true,
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/docs$", "dest": "/docs.html" },
    { "src": "/(.*)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/404.html", "status": 404 }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
